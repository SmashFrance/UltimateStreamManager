<metro:MetroWindow x:Class="UltimateStreamMgr.View.Settings.Stream.TwitchAuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltimateStreamMgr.View"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="Twitch Authorization" Height="500" Width="500">
    <Grid>
        <cef:ChromiumWebBrowser x:Name="browser" Address="{Binding Url}" />
        <metro:ProgressRing x:Name="progress"/>
    </Grid>
</metro:MetroWindow>
